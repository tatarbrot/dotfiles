" load pathogen
execute pathogen#infect()

" set ident
filetype plugin indent on

" terminal coloring
set t_Co=256

" enable line numbers
set number

" enable syntax highlighting
syntax on

" colorscheme
set background=dark
colorscheme lodestone

" lightline
set laststatus=2
let g:lightline = {
      \ 'colorscheme': 'wombat',
      \ 'component': {
      \   'readonly': '%{&readonly?"x":""}',
      \ },
      \ 'separator': { 'left': '', 'right': '' },
      \ 'subseparator': { 'left': '|', 'right': '|' }
      \ }
